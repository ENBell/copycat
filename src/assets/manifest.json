{
  "name": "Tester Ext.",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Tester app.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page" : "background.html" 
  },
  "permissions": [
    "contextMenus",
    "storage",
    "declarativeContent",
    "activeTab",
    "tabs",
    "contextMenus"
  ],
  "web_accessible_resources": [
    "images/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "app.bundle.js"
      ]
    }
  ]
}